@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8">
    <div class="max-w-5xl mx-auto px-4">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">
            <!-- Header -->
            <div class="bg-gradient-to-r from-emerald-600 via-teal-600 to-blue-600 px-10 py-8">
                <div class="text-center">
                    <h1 class="text-3xl font-bold text-white mb-2">Edit Book</h1>
                    <p class="text-emerald-100 text-lg">Expand your library collection with a new book</p>
                </div>
            </div>

            <!-- Form -->
            <form asp-action="Edit" class="p-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-10">
                    <div class="grid grid-cols-1 lg:grid-cols-1 gap-10">
                        <div class="space-y-8 px-8 py-8">
                            <div class="grid grid-cols-3 md:grid-cols-3 gap-8">
                                <div class="space-y-2">
                                    <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                                    <input asp-for="Title"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                           placeholder="Enter the book title"
                                           required />
                                    <span asp-validation-for="Title" class="text-red-500 text-sm font-medium"></span>
                                </div>

                                <div class="space-y-2">
                                    <label asp-for="Author" class="block text-sm font-medium text-gray-700 mb-1">  Author </label>
                                    <input asp-for="Author"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                           placeholder="Enter author name"
                                           required />
                                    <span asp-validation-for="Author" class="text-red-500 text-sm font-medium"></span>
                                </div>

                                <div class="space-y-2">
                                    <label asp-for="Category" class="block text-sm font-medium text-gray-700 mb-1">Category </label>
                                    <input asp-for="Category"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                           placeholder="Enter Category"
                                           required />
                                    <span asp-validation-for="Category" class="text-red-500 text-sm font-medium"></span>
                                </div>
                                <div class="space-y-2">
                                    <label asp-for="PublishedYear" class="block text-sm font-medium text-gray-700 mb-1">Published Year</label>
                                    <input asp-for="PublishedYear"
                                           type="number"
                                           min="1000"
                                           max="@DateTime.Now.Year"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                           placeholder="e.g. 2024" />
                                    <span asp-validation-for="PublishedYear" class="text-red-500 text-sm font-medium"></span>
                                </div>
                                <div class="space-y-2">
                                    <label asp-for="Quantity" class="block text-sm font-medium text-gray-700 mb-1">Stock Quantity</label>
                                    <input asp-for="Quantity"
                                           type="number"
                                           min="1"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                           placeholder="Enter quantity" />
                                    <span asp-validation-for="Quantity" class="text-red-500 text-sm font-medium"></span>
                                </div>
                                <div class="space-y-2">
                                    <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1">Price (USD)</label>
                                    <div class="relative">
                                        <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500 font-bold text-lg">$</span>
                                        <input asp-for="Price"
                                               type="number"
                                               min="0"
                                               step="0.01"
                                               class="w-full px-8 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                               placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-red-500 text-sm font-medium"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description Section -->
                <div class="space-y-8 px-8 py-8">
                    <div class="space-y-2">
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <textarea asp-for="Description"
                            rows="5"
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                            placeholder="Enter a detailed description of the book, including plot summary, key themes, or notable features..."></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm font-medium"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="space-x-3 pt-4 px-8 py-4 items-center justify-between">
                    <a asp-action="Index"
                       class="btn px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </a>

                    <button type="submit" value="Create"
                            class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
