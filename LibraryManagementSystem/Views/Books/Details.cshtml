@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
    var isAvailable = Model.Quantity > 0;
}

<div class="min-h-screen bg-white py-0">
    <div class="w-full max-w-full mx-auto">
        <div class="rounded-none shadow-none bg-white overflow-hidden">
            <div class="bg-gradient-to-r from-emerald-600 via-teal-600 to-blue-600 px-10 py-8">
                <div class="text-center">
                    <svg class="w-8 h-8 text-emerald-600 mx-auto mb-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    <h1 class="text-3xl font-bold text-white mb-2">Book Details</h1>
                </div>
            </div>

            <!-- Main Content -->
            <div class="px-8 py-12 w-full">
                <div class="flex flex-col md:flex-row lg:items-center gap-4">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">@Model.Title</h1>
                        <div class="flex items-center gap-4 text-gray-500 text-base mb-2">
                            <span class="flex items-center gap-1">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                @Model.Author
                            </span>
                            <span class="flex items-center gap-1">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                @Model.PublishedYear
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Info Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 py-8">
                    <div class="bg-gray-100 rounded-xl p-4 flex items-center gap-4 shadow-none">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V9a2 2 0 012-2h8zm0 0V5a2 2 0 00-2-2H10a2 2 0 00-2 2v2" />
                        </svg>
                        <div>
                            <div class="text-xs text-gray-500">Category</div>
                            <div class="font-bold text-gray-800">@Model.Category</div>
                        </div>
                    </div>
                    <div class="bg-gray-100 rounded-xl p-4 flex items-center gap-4 shadow-none">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zm0 0V4m0 8v8" />
                        </svg>
                        <div>
                            <div class="text-xs text-gray-500">Price</div>
                            <div class="font-bold text-gray-800">$@Model.Price.ToString("0.00")</div>
                        </div>
                    </div>
                    <div class="bg-gray-100 rounded-xl p-4 flex items-center gap-4 shadow-none">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 17v-2a4 4 0 014-4h10a4 4 0 014 4v2" />
                            <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2" fill="none" />
                        </svg>
                        <div>
                            <div class="text-xs text-gray-500">Quantity in Stock</div>
                            <div class="font-bold text-gray-800">@Model.Quantity @((Model.Quantity == 1 ? "copy" : "copies"))</div>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="py-8 bg-gray-100 rounded-xl p-4 flex items-center gap-4 shadow-none">
                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2a4 4 0 014-4h2a4 4 0 014 4v2" />
                        <rect x="3" y="7" width="6" height="6" rx="2" stroke="currentColor" stroke-width="2" fill="none" />
                    </svg>
                    <div>
                        <div class="text-xs text-gray-500">Description</div>
                        <div class="text-gray-700">@Model.Description</div>
                    </div>
                    
                </div>
            </div>
            <div class="flex gap-6 px-8 py-8">
                <a asp-action="Index"
                   class="btn px-4 py-2 border border-gray-400 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id"
                   class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors">
                    Edit Book
                </a>
            </div>
        </div>
    </div>
</div>