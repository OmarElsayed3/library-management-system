@model LibraryManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8">
    <div class="max-w-5xl mx-auto px-4">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">
            <!-- Header -->
            <div class="bg-gradient-to-r from-emerald-600 via-teal-600 to-blue-600 px-10 py-8">
                <div class="text-center">
                    <h1 class="text-3xl font-bold text-white mb-2">Add New Customer</h1>
                    <p class="text-emerald-100 text-lg">Expand your library collection with a new book</p>
                </div>
            </div>

            <!-- Form  -->
            <form asp-action="Create" class="p-10">

                <div class="mb-10">
                    <div class="grid grid-cols-1 lg:grid-cols-1 gap-10">
                        <div class="space-y-8 px-8 py-8">
                           <div class="grid grid-cols-3 md:grid-cols-3 gap-8">
                                <div class="space-y-2">
                                    <label asp-for="CustomerName" class="block text-sm font-medium text-gray-700 mb-1">Customer Name</label>
                                    <input asp-for="CustomerName"
                                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                            placeholder="Enter the CustomerName"
                                            required />
                                    <span asp-validation-for="CustomerName" class="text-red-500 text-sm font-medium"></span>
                                </div>

                                <div class="space-y-2">
                                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">  Email </label>
                                    <input asp-for="Email" type="email"
                                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                            placeholder="Enter author name"
                                            required />
                                    <span asp-validation-for="Email" class="text-red-500 text-sm font-medium"></span>
                                </div>

                                <div class="space-y-2">
                                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">PhoneNumber </label>
                                    <input asp-for="PhoneNumber"
                                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                            placeholder="Enter Category"
                                            required />
                                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm font-medium"></span>
                                </div>
                                @*Registration Date*@
                                <div class="space-y-2">
                                    <label asp-for="RegistrationDate" class="block text-sm font-medium text-gray-700 mb-1">Registration Date</label>
                                    <input asp-for="RegistrationDate"
                                            type="date"
                                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                           placeholder="Enter Registration Date"
                                     />
                                    <span asp-validation-for="RegistrationDate" class="text-red-500 text-sm font-medium"></span>
                                </div>
                                @*Status*@
                                <div class="space-y-2">
                                    <label class="block text-sm font-bold text-gray-700 mb-1 py-12">
                                        <input asp-for="IsActive" type="checkbox" class="mr-2" />
                                        Is Active
                                    </label>
                                    <span asp-validation-for="IsActive" class="text-red-500 text-sm font-medium"></span>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Address Section -->
                <div class="space-y-8 px-8">
                    <div class="space-y-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                        <textarea asp-for="Address"
                                  rows="5"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                  placeholder="Enter Address"></textarea>
                        <span asp-validation-for="Address" class="text-red-500 text-sm font-medium"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="space-x-3 pt-4 px-8 py-4 items-center justify-between">
                    <a asp-action="Index"
                       class="btn px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </a>

                    <button type="submit" value="Create"
                            class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


