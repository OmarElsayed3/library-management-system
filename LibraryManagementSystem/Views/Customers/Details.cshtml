@model LibraryManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<div class="min-h-screen bg-white py-0">
    <div class="w-full max-w-full mx-auto">
        <div class="rounded-none shadow-none bg-white overflow-hidden">
            <div class="bg-gradient-to-r from-emerald-600 via-teal-600 to-blue-600 px-10 py-8">
                <div class="text-center">
                    <svg class="w-8 h-8 text-emerald-600 mx-auto mb-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    <h1 class="text-3xl font-bold text-white mb-2">Book Details</h1>
                </div>
            </div>

            <!-- Main Content -->
            <div class="px-8 py-12 w-full">
                <div class="flex flex-col md:flex-row lg:items-center gap-4">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">@Html.DisplayFor(model => model.CustomerName)</h1>
                        <div class="flex items-center gap-4 text-gray-500 text-base mb-2">
                            <span class="flex items-center gap-1">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                @Html.DisplayFor(model => model.RegistrationDate)
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Info Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 py-8">
                    <div class="bg-gray-100 rounded-xl p-4 flex items-center gap-4 shadow-none">
                        <svg class="w-6 h-6 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Zm0 0a8.949 8.949 0 0 0 4.951-1.488A3.987 3.987 0 0 0 13 16h-2a3.987 3.987 0 0 0-3.951 3.512A8.948 8.948 0 0 0 12 21Zm3-11a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>

                        <div>
                            <div class="text-xs text-gray-500">Email</div>
                            <div class="font-bold text-gray-800">@Html.DisplayFor(model => model.Email)</div>
                        </div>
                    </div>
                    <div class="bg-gray-100 rounded-xl p-4 flex items-center gap-4 shadow-none">
                        <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.427 14.768 17.2 13.542a1.733 1.733 0 0 0-2.45 0l-.613.613a1.732 1.732 0 0 1-2.45 0l-1.838-1.84a1.735 1.735 0 0 1 0-2.452l.612-.613a1.735 1.735 0 0 0 0-2.452L9.237 5.572a1.6 1.6 0 0 0-2.45 0c-3.223 3.2-1.702 6.896 1.519 10.117 3.22 3.221 6.914 4.745 10.12 1.535a1.601 1.601 0 0 0 0-2.456Z" />
                        </svg>
                        <div>
                            <div class="text-xs text-gray-500">Phone Number</div>
                            <div class="font-bold text-gray-800">@Html.DisplayFor(model => model.PhoneNumber)</div>
                        </div>
                    </div>
                    <div class="bg-gray-100 rounded-xl p-4 flex items-center gap-4 shadow-none">
                        <svg class="w-6 h-6 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M7 2a2 2 0 0 0-2 2v1a1 1 0 0 0 0 2v1a1 1 0 0 0 0 2v1a1 1 0 1 0 0 2v1a1 1 0 1 0 0 2v1a1 1 0 1 0 0 2v1a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H7Zm3 8a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm-1 7a3 3 0 0 1 3-3h2a3 3 0 0 1 3 3 1 1 0 0 1-1 1h-6a1 1 0 0 1-1-1Z" clip-rule="evenodd" />
                        </svg>

                        <div>
                            <div class="text-xs text-gray-500">Address</div>
                            <div class="font-bold text-gray-800">@Html.DisplayFor(model => model.Address)</div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="flex gap-6 px-8 py-8">
                <a asp-action="Index"
                   class="btn px-4 py-2 border border-gray-400 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.CustomerId"
                   class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg transition-colors">
                    Edit Customer
                </a>
            </div>
        </div>
    </div>
</div>

