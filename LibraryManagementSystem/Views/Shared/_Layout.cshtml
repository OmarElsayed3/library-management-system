<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagementSystem.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <header>
        <nav class="bg-white shadow-sm border-b border-gray-200">
            <div class="max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <div class="flex items-center">
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>

                            </div>
                            <a class="text-xl font-semibold text-gray-900 hover:text-blue-600 transition-colors" asp-area="" asp-controller="Home" asp-action="Index">Library Management System</a>
                        </div>
                    </div>
                    <div class="md:hidden">
                        <button type="button" class="bg-gray-50 p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" id="mobile-menu-button">
                            <span class="sr-only">Open main menu</span>
                            <!-- Menu icon -->
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                </div>
                <!-- Mobile menu -->
                <div class="hidden md:hidden" id="mobile-menu">
                    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200">
                        <a class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                        <a class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        <a class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="MakeSales" asp-action="Index">Sales</a>
                        <a class="text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-controller="MakeSales" asp-action="Create">Make Sale</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="flex flex-1">
        <!-- Sidebar -->
        @{
            string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            string currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        }
        <div class="hidden lg:flex lg:flex-shrink-0">
            <div class="flex flex-col w-64">
                <div class="flex flex-col flex-grow bg-white border-r border-gray-200 pt-5 pb-4 overflow-y-auto">
                    <div class="flex-grow flex flex-col">
                        <nav class="flex-1 px-2 space-y-1">
                            <a asp-area="" asp-controller="Home" asp-action="Index"
                               class="group flex items-center px-2 py-2 text-sm font-medium border-r-4
                                @(currentController == "Home" && currentAction == "Index" ? "border-green-500 text-green-700 bg-green-50" : "border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900")">
                                <svg class="@(currentController == "Home" && currentAction == "Index" ? "text-green-500" : "text-gray-400") mr-3 h-6 w-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15v4m6-6v6m6-4v4m6-6v6M3 11l6-5 6 5 5.5-5.5" />
                                </svg>
                                Home
                            </a>
                            <a asp-area="" asp-controller="Books" asp-action="Index"
                               class="group flex items-center px-2 py-2 text-sm font-medium border-r-4
                                    @(currentController == "Books" && currentAction == "Index" ? "border-green-500 text-green-700 bg-green-50" : "border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900")">
                                <svg class="@(currentController == "Books" && currentAction == "Index" ? "text-green-500" : "text-gray-400") mr-3 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                                Books
                            </a>
                            <a asp-area="" asp-controller="Customers" asp-action="Index"
                               class="group flex items-center px-2 py-2 text-sm font-medium border-r-4
                                    @(currentController == "Customers" && currentAction == "Index" ? "border-green-500 text-green-700 bg-green-50" : "border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900")">
                                <svg class="@(currentController == "Customers" && currentAction == "Index" ? "text-green-500" : "text-gray-400") mr-3 h-6 w-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M16 19h4a1 1 0 0 0 1-1v-1a3 3 0 0 0-3-3h-2m-2.236-4a3 3 0 1 0 0-4M3 18v-1a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v1a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1Zm8-10a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>
                                Customers
                            </a>
                            <a asp-area="" asp-controller="MakeSales" asp-action="Index"
                               class="group flex items-center px-2 py-2 text-sm font-medium border-r-4
                                    @(currentController == "MakeSales" && currentAction == "Index" ? "border-green-500 text-green-700 bg-green-50" : "border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900")">
                                <svg class="@(currentController == "MakeSales" && currentAction == "Index" ? "text-green-500" : "text-gray-400") mr-3 h-6 w-6" width="24px" height="24px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="12" y1="1" x2="12" y2="23"></line>
                                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                </svg>
                                Sales
                            </a>
                            <a asp-area="" asp-controller="MakeSales" asp-action="Create"
                               class="group flex items-center px-2 py-2 text-sm font-medium border-r-4
                                    @(currentController == "MakeSales" && currentAction == "Create" ? "border-green-500 text-green-700 bg-green-50" : "border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900")">
                                <svg class="@(currentController == "MakeSales" && currentAction == "Create" ? "text-green-500" : "text-gray-400") mr-3 h-6 w-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 4h1.5L9 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-8.5-3h9.25L19 7h-1M8 7h-.688M13 5v4m-2-2h4" />
                                </svg>
                                Make Sale
                            </a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="flex flex-col flex-1 overflow-hidden">
            <main class="flex-1 relative z-0 overflow-y-auto focus:outline-none">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
