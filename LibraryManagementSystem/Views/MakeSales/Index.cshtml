@using LibraryManagementSystem.Data
@model IEnumerable<MakeSale>

@{
    ViewData["Title"] = "Sales Management";
    ApplicationDbContext dbContext = new ApplicationDbContext();
    var BookCho = dbContext.Stock.ToList();
    var totalRevenue = Model?.Sum(s => s.TotalPriceOfSale) ?? 0m;
    var totalSales = Model?.Count() ?? 0;
    var avgSaleValue = totalSales > 0 ? totalRevenue / totalSales : 0m;
}
<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 py-12">
    <div class="max-w-6xl mx-auto px-6">
        <div class="relative bg-gradient-to-r from-emerald-600 via-teal-600 to-blue-600 rounded-3xl p-8 mb-8 overflow-hidden shadow-2xl">
            <div class="relative">
                <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6">
                    <div class="flex items-center space-x-4">
                        <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-4">
                            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-4xl font-bold text-white mb-2">Sales Management</h1>
                            <p class="text-white/90 text-xl">Track book sales, revenue, and customer transactions</p>
                        </div>
                    </div>
                    
                    <a asp-action="Create" 
                       class="group bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 hover:scale-105 border border-white/30">
                        <div class="flex items-center space-x-3">
                            <svg class="w-6 h-6 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            <span>New Sale</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium uppercase tracking-wide">Total Revenue</p>
                        <p class="text-3xl font-bold text-emerald-600 mt-2">$@totalRevenue.ToString("N2")</p>
                        <p class="text-gray-500 text-sm mt-1">All time earnings</p>
                    </div>
                    <div class="bg-emerald-100 rounded-2xl p-4">
                        <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3z"></path>
                            <path d="M21 12c0 0-5-9-9-9s-9 9-9 9 5 9 9 9 9-9 9-9z"></path>
                        </svg>
                    </div>
                </div>
            </div>
            
            <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium uppercase tracking-wide">Total Sales</p>
                        <p class="text-3xl font-bold text-blue-600 mt-2">@totalSales</p>
                        <p class="text-gray-500 text-sm mt-1">Completed transactions</p>
                    </div>
                    <div class="bg-blue-100 rounded-2xl p-4">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                        </svg>
                    </div>
                </div>
            </div>
            
            <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 border border-white/20 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm font-medium uppercase tracking-wide">Average Sale</p>
                        <p class="text-3xl font-bold text-purple-600 mt-2">$@avgSaleValue.ToString("N2")</p>
                        <p class="text-gray-500 text-sm mt-1">Per transaction</p>
                    </div>
                    <div class="bg-purple-100 rounded-2xl p-4">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
            <div class="bg-gradient-to-r from-gray-50 to-blue-50 px-8 py-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        Sales History
                    </h2>
                    <div class="flex items-center space-x-4">
                        <div class="bg-white rounded-xl px-4 py-2 shadow-sm border">
                            <span class="text-gray-600 text-sm font-medium">@totalSales transactions</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gradient-to-r from-gray-100 to-blue-100 border-b-2 border-gray-200">
                        <tr>
                            <th class="text-left py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Sale ID</th>
                            <th class="text-left py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Books</th>
                            <th class="text-left py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Customer</th>
                            <th class="text-left py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Date</th>
                            <th class="text-left py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Quantities</th>
                            <th class="text-left py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Unit Prices</th>
                            <th class="text-left py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Total</th>
                            <th class="text-center py-5 px-6 font-bold text-gray-800 uppercase tracking-wide text-sm">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">"
                        @if (Model != null && Model.Any())
                        {
                            foreach (var sale in Model)
                            {
                                <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-300 group">
                                    <td class="py-6 px-6">
                                        <div class="flex items-center">
                                            <div class="bg-gradient-to-r from-emerald-500 to-blue-500 rounded-lg p-2 mr-3">
                                                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                                </svg>
                                            </div>
                                            <span class="font-bold text-gray-900 text-lg">#@sale.MakeSaleId</span>
                                        </div>
                                    </td>
                                    <td class="py-6 px-6">
                                        @if (sale.BookId != null && sale.BookId.Any())
                                        {
                                            foreach (var bookId in sale.BookId!)
                                            {
                                                var book = BookCho.FirstOrDefault(b => b.Id == bookId);
                                                <div class="bg-blue-100 rounded-lg px-3 py-1 inline-block mr-2 mb-1">
                                                    <span class="font-medium text-blue-800 text-sm">@(book?.Title ?? "Unknown Book")</span>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-gray-400 italic">No books</span>
                                        }
                                    </td>
                                    <td class="py-6 px-6">
                                        <div class="flex items-center">
                                            <div class="bg-purple-100 rounded-full p-2 mr-3">
                                                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                </svg>
                                            </div>
                                            <div>
                                                <div class="font-bold text-gray-900">@(sale.Customer?.CustomerName ?? "Unknown Customer")</div>
                                                <div class="text-gray-500 text-sm">Customer ID: @sale.CustomerId</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-6 px-6">
                                        <div class="flex items-center space-x-2">
                                            <div class="bg-teal-100 rounded-lg p-2">
                                                <svg class="w-4 h-4 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                            <div>
                                                <div class="font-bold text-gray-900">@sale.SaleDate.ToString("MMM dd")</div>
                                                <div class="text-gray-500 text-sm">@sale.SaleDate.ToString("yyyy")</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-6 px-6">
                                        @if (sale.QuantityOfSale != null)
                                        {
                                            <div class="space-y-1">
                                                <div class="bg-orange-100 rounded-lg px-3 py-1 inline-block mr-1">
                                                    <span class="font-bold text-orange-800">@sale.QuantityOfSale</span>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400 italic">No quantities</span>
                                        }
                                    </td>
                                    <td class="py-6 px-6">
                                        <div class="bg-green-100 rounded-lg px-3 py-2 inline-block">
                                            @{
                                                var unitPrice = sale.TotalPriceOfSale / sale.QuantityOfSale[0];
                                            }
                                            <span class="font-bold text-green-800">$@unitPrice.ToString("N2")</span>
                                        </div>
                                    </td>
                                    <td class="py-6 px-6">
                                        <div class="bg-green-100 rounded-lg px-3 py-2 inline-block">
                                            <span class="bg-gradient-to-r from-emerald-500 to-green-500 font-bold text-green-800 px-4 py-2">
                                                $@sale.TotalPriceOfSale.ToString("N2")
                                            </span>
                                        </div>
                                    </td>
                                    <td class="py-6 px-6">
                                        <div class="flex items-center justify-center space-x-1">
                                            <a asp-action="Delete" asp-route-id="@sale.MakeSaleId"
                                               class="bg-red-50 text-red-700 hover:bg-red-100 px-3 py-2 rounded-lg text-sm font-medium transition-colors">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-16">
                                    <div class="max-w-md mx-auto">
                                        <div class="bg-gradient-to-r from-gray-100 to-blue-100 w-32 h-32 rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg">
                                            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                                            </svg>
                                        </div>
                                        <h3 class="text-2xl font-bold text-gray-700 mb-3">No Sales Yet</h3>
                                        <p class="text-gray-500 mb-6">Start making sales to see transaction history here</p>
                                        <a asp-action="Create"
                                           class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-2 rounded-lg transition-colors">
                                            Create First Sale
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
